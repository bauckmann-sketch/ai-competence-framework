    "QB2": {
      "max_points": 20,
      "mode": "weighted_sum_selected",
      "weights": {
        "quality_criteria": 8,
        "context": 7,
        "audience": 5,
        "format": 4,
        "example": 3,
        "tone": 2
      },
      "exclusive_zero": "none",
      "cap": 20
    },
    "QC2": {
      "max_points": 20,
      "map": {
        "primary_source": 20,
        "multi_sources": 18,
        "ai_sources_then_check": 15,
        "dont_use_for_facts": 10,
        "no_check": 0
      }
    },
    "QD3": {
      "max_points": 20,
      "map": {
        "no_impact": 0,
        "slower": 6,
        "reorganize": 12,
        "dependent": 17,
        "fundamental_change": 20
      }
    },
    "QE2": {
      "max_points": 20,
      "map": {
        "prompt_templates": 8,
        "paid_chatbot": 5,
        "assistant": 13,
        "simple_automation": 17,
        "workflow": 19,
        "agent": 20
      }
    },
    "QF2": {
      "max_points": 20,
      "mode": "weighted_sum_selected",
      "exclusive_zero": "none",
      "cap": 20,
      "weights": {
        "code": 8,
        "text": 6,
        "video": 6,
        "presentations": 5,
        "graphics": 5,
        "voice": 4
      }

      "question_id": "Q1_2b",
      "description": "Index investice do placených AI nástrojů (pro segmentaci; defaultně neovlivňuje A–F skóre).",
      "map": {
        "0": 0,
        "1": 1,
        "2_3": 2,
        "up_to_6": 3,
        "up_to_10": 4,
        "gt_10": 5
      }
    },
    "usage_frequency_index": {
      "question_id": "Q1_2",
      "description": "Index frekvence používání AI (0–5).",
      "map": {
        "never": 0,
        "lt_weekly": 1,
        "weekly": 2,
        "almost_daily": 4,
        "multi_daily": 5
      }
    },
    "adoption_investment_index": {
      "type": "derived_sum",
      "components": [
        "usage_frequency_index",
        "paid_tools_index"
      ],
      "range": [
        0,
        10
      ],
      "bands": [
        {
          "range": [
            0,
            2
          ],
          "label": "Nízká"
        },
        {
          "range": [
            3,
            6
          ],
          "label": "Střední"
        },
        {
          "range": [
            7,
            10
          ],
          "label": "Vysoká"
        }
      ],
      "description": "Kombinovaný index adopce & investice (frekvence + placené nástroje). Neovlivňuje Skill skóre."
